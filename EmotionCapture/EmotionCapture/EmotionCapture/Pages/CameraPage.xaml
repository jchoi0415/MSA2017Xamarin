<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmotionCapture.CameraPage"
             Title="Camera">
    <StackLayout>
        <Label Text="SMILE" 
                HorizontalOptions="Center" 
                VerticalOptions="StartAndExpand" 
                FontAttributes="Bold"
                FontSize="30"
                TextColor="Teal"/>
        
        <Image x:Name="picture"/>

        <Label x:Name="currentEmotion" HorizontalOptions="Center"/>

        <Button Text="Take a picture to analyse" x:Name="CameraButton" TextColor="White" BackgroundColor="Teal" Clicked="TakePicture" />
    </StackLayout>
</ContentPage>